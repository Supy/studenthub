default: &default
  adapter: mysql2
  encoding: utf8
  pool: 5
  username: root
  password:
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *default
  database: studenthub_development

test:
  <<: *default
  database: studenthub_test

production:
  <<: *default
  database: studenthub_production
  username: studenthub
  password: <%= ENV['STUDENTHUB_DATABASE_PASSWORD'] %>
